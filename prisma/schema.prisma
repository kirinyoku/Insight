// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @unique
  email    String  @unique
  imageUrl String?

  File    File[]
  Message Message[]
}

enum UploadStatus {
  PENDING // The process of uploading a file to the database.
  PROCESSING // The file has been successfully uploaded to the database but not yet vectorized.
  FAILED // One of the stages was not successful.
  SUCCESS // The file was successfully uploaded and vectorized.
}

model File {
  id   String @id @default(cuid())
  name String

  url          String
  key          String // Key required for Uploadthing
  uploadStatus UploadStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  Message Message[]
}

model Message {
  id   String @id @default(cuid())
  text String @db.Text()

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  File   File?   @relation(fields: [fileId], references: [id])
  fileId String?

  isUserMessage Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
